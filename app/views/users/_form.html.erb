<div class="container">
	<%= form_for @user do |f|  %>
	  <%= render 'shared/errors', obj: @user %>
      <div class="mb-3">
	  	<%= f.label :username, 'Nombre de usuario', class: 'form-label' %>
	  	<%= f.text_field :username, class: 'form-control' %>
	  </div>
	  <div class="mb-3">
	  	<%= f.label :password, 'ContraseÃ±a', class: 'form-label' %>
	  	<%= f.password_field :password, class: 'form-control' %>
	  </div>
	  <div class="mb-3">
	  	<%= f.label :time_zone, 'Zona horaria', class: 'form-label' %>
	  	<%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name, class: 'form-control' %>
	  </div>
      <div class="mb-3">
	  	<%= f.label :phone, 'Telefono', class: 'form-label' %>
	  	<%= f.text_field :phone, maxlength: 10, class: 'form-control' %>
	  </div>
	  <%= f.submit (@user.new_record? ? 'Registrar': 'Actualizar'), class: 'btn btn-primary' %>
	<% end %>
</div>